@inject AuthorService _authorService;
<p> Станьте музыкантом сегодня! </p>

<EditForm Model="_model" OnValidSubmit="RegisterAsAuthor">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText id="nickname" @bind-Value="_model.Nickname" />

    <button class="btn-success" type="submit">Стать музыкантом</button>

</EditForm>

@code{

    [Parameter]
    public Action OnAuthorBecame { get; set; } = () => { };
    private Model _model = new();

    private async Task RegisterAsAuthor()
    {
        await _authorService.MakeAuthor(_model.Nickname);
        OnAuthorBecame();
    }

    private class Model
    {
        [Required]
        public string Nickname;
    }
}