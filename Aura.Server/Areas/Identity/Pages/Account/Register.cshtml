@page
@model RegisterModel

<h1>Register</h1>

<div class="row">
    <div class="col-md">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Card"></label>
                <input asp-for="Input.Card" class="form-control" />
                <span asp-validation-for="Input.Card" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cvv"></label>
                <input asp-for="Input.Cvv" class="form-control" />
                <span asp-validation-for="Input.Cvv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Expires"></label>
                <input asp-for="Input.Expires" class="form-control" />
                <span asp-validation-for="Input.Expires" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
